<?xml version='1.0'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

  <!-- This is how we include wxi files -->
  <?include "parameters.wxi" ?>

  <!--
    Id="*" is to enable upgrading. * means that the product ID will be autogenerated on each build.
    Name is made of localized product name and version number.
  -->
  <Product Id="*" Name="!(loc.ProductName) v$(var.DisplayVersionNumber)" Language="!(loc.LANG)"
          Version="$(var.VersionNumber)" Manufacturer="!(loc.ManufacturerName)" UpgradeCode="$(var.UpgradeCode)">

    <!--
      Define the minimum supported installer version (2.0).
      The install should be done for the whole machine not just the current user
    -->
    <Package InstallerVersion="200" InstallPrivileges="elevated" Compressed="yes" InstallScope="perMachine" Platform="x64"/>

    <Media Id="1" Cabinet="Project.cab" EmbedCab="yes" CompressionLevel="high" />

    <!-- Major upgrade -->
    <Upgrade Id="$(var.UpgradeCode)">
      <UpgradeVersion OnlyDetect="yes" Minimum="$(var.VersionNumber)" IncludeMinimum="no" Property="NEWERVERSIONDETECTED" />
      <UpgradeVersion Minimum="0.0.0.0" IncludeMinimum="yes" Maximum="$(var.VersionNumber)" IncludeMaximum="yes" Property="OLDERVERSIONBEINGUPGRADED" />
    </Upgrade>

    <Property Id="PREVIOUSLOCATION">
      <RegistrySearch Id="GetInstallLocation"
              Root="HKCU"
              Key="Software\!(loc.ManufacturerName)\!(loc.ProductName)"
              Name="InstallLocation"
              Type="raw"
              Win64='yes' />
    </Property>

    <Property Id="MSIRMSHUTDOWN" Value="2" />

    <DirectoryRef Id="TARGETDIR">
        <Component Id="RegistryEntries">
            <RegistryKey Root="HKCU"
                         Key="Software\!(loc.ManufacturerName)\!(loc.ProductName)"
                  Action="createAndRemoveOnUninstall">
                <RegistryValue Type="string" Name="InstallLocation" Value="[PROJECTLOCATION]" KeyPath="yes"/>
            </RegistryKey>
        </Component>
    </DirectoryRef>

    <!-- Create custom actions(postinstall scripts)  -->
    <!-- Python interpreter to use in preintstall sequence -->
      <CustomAction Id="PythonBeforeInstall" Property="PyPre" Value="[PREVIOUSLOCATION]embedded\python.exe" />
    <!-- Installscripts to use in preinstall -->
      <CustomAction Id="PreinstallSequence"
                Property="PyPre"
                ExeCommand=" [PREVIOUSLOCATION]embedded\installscripts\msi_install_actions.py  --phase='pre' --projectlocation='[PROJECTLOCATION]' --version='$(var.VersionNumber)' "
                Return="ignore"
                />
    <!-- Python interpreter to use in postinstall -->
    <CustomAction Id="PythonAfterInstall" Property="PyPost" Value="[PROJECTLOCATION]embedded\python.exe" />
    <!-- Installscripts to use in postinstall -->
    <CustomAction Id="PostInstallSequence"
              Property="PyPost"
              ExeCommand=" [PROJECTLOCATION]embedded\installscripts\msi_install_actions.py  --phase='post' --projectlocation='[PROJECTLOCATION]' --version='$(var.VersionNumber)' "
              Return="ignore"
              />

    <!-- Uninstall actions -->
    <!-- PreUninstall -->
    <!-- Python interpreter to use in preuninstall -->
    <CustomAction Id="PythonUnInstall" Property="PyPreun" Value="[PROJECTLOCATION]embedded\python.exe" />
    <!-- Installscripts to use in preuninstall -->
    <CustomAction Id="PreUnInstallSequence"
              Property="PyPreun"
              ExeCommand=" [PROJECTLOCATION]embedded\installscripts\msi_install_actions.py  --phase='preun' --projectlocation='[PROJECTLOCATION]' --version='$(var.VersionNumber)' "
              Return="ignore"
              />
    <!-- PostUninstall Actions -->
    <!-- Full path to cmd -->
    <CustomAction Id="CmdLocation" Property="cmd" Value="C:\Windows\System32\cmd.exe"/>
    <CustomAction Id="DeleteArtifacts"
              Property="cmd"
              ExeCommand=' /c rmdir /S /Q "[PROJECTLOCATION]"'
              Return="ignore"
              />
    <CustomAction Id="DeleteBatFiles"
              Property="cmd"
              ExeCommand=' /c del /F /S /Q "[PROJECTLOCATION]..\*.bat"'
              Return="ignore"
              />


    <InstallExecuteSequence>
      <RemoveExistingProducts After="InstallValidate" />
      <!-- PreInstall actions -->
      <!-- In our configuration wix will always perform a winsowsinstaller-MajorUpgrade which  -->
      <!-- will uninstall old package before installing a new one -->
      <!-- so we check for NOT INSTALLED preferce in order to execute install scripts only once  -->
      <!-- see SCALARIZR-1667 -->
      <Custom Action="PythonBeforeInstall" After="InstallInitialize"> (NOT UPGRADINGPRODUCTCODE) AND (NOT Installed) </Custom>
      <!-- preinstall should always run and will fail silently, if there is no valid python location set in registry -->
      <Custom Action="PreinstallSequence" After="PythonBeforeInstall"> (NOT UPGRADINGPRODUCTCODE) AND (NOT Installed) </Custom>

      <!-- PostInstall actions -->
      <Custom Action="PythonAfterInstall" After="InstallFinalize"> (NOT UPGRADINGPRODUCTCODE) AND (NOT Installed) </Custom>
      <Custom Action="PostInstallSequence" After="PythonAfterInstall"> (NOT UPGRADINGPRODUCTCODE) AND (NOT Installed) </Custom>

      <!-- PreUninstall actions -->
      <Custom Action="PythonUnInstall" After="InstallInitialize"> (NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL") </Custom>
      <Custom Action="PreUnInstallSequence" After="PythonUnInstall"> (NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL") </Custom>

      <!-- PostUninstall actions -->
      <Custom Action="CmdLocation" After="InstallFinalize"> (NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL") </Custom>
      <Custom Action="DeleteArtifacts" After="CmdLocation"> (NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL") </Custom>
      <Custom Action="DeleteBatFiles" After="DeleteArtifacts"> (NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL") </Custom>


      <StopServices Suppress="yes" />
      <StartServices Suppress="yes" />
      <InstallServices Suppress="yes" />
      <DeleteServices Suppress="yes" />

      <RemoveFiles Suppress="yes" />
      <RemoveFolders Suppress="yes" />

      <ForceReboot Suppress="yes" />


    </InstallExecuteSequence>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="WINDOWSVOLUME">
<% hierarchy.each.with_index do |(name, id), index| -%>
        <%= '  '*index %><Directory Id="<%= id %>" Name="<%= name %>">
<% end -%>
<% hierarchy.keys.each.with_index do |_, index| -%>
        <%= '  '*(hierarchy.size - index-1) %></Directory>
<% end -%>
      </Directory>
    </Directory>

    <SetDirectory Id="WINDOWSVOLUME" Value="[WindowsVolume]" />

    <!-- Set the components defined in our fragment files that will be used for our feature  -->
    <Feature Id="ProjectFeature" Title="!(loc.FeatureMainName)" Absent="disallow" AllowAdvertise="no" Level="1" ConfigurableDirectory="<%= wix_install_dir %>">

        <ComponentGroupRef Id="ProjectDir" />
        <ComponentRef Id="RegistryEntries"/>

    </Feature>

    <!-- UI Stuff -->
    <Icon Id="project.ico" SourceFile="Resources\assets\project_16x16.ico"/>
    <Property Id="ARPPRODUCTICON" Value="project.ico" />
    <Property Id="ARPHELPLINK" Value="http://www.scalr.com" />
    <Property Id="WIXUI_INSTALLDIR" Value="<%= wix_install_dir %>" />

    <UIRef Id="ProjectUI_InstallDir"/>
    <UI Id="ProjectUI_InstallDir">
      <UIRef Id="WixUI_FeatureTree"/>
      <TextStyle Id="WixUI_Font_Normal_White" FaceName="Tahoma" Size="8" Red="255" Green="255" Blue="255" />
      <TextStyle Id="WixUI_Font_Bigger_White" FaceName="Tahoma" Size="12" Red="255" Green="255" Blue="255" />
      <TextStyle Id="WixUI_Font_Title_White" FaceName="Tahoma" Size="9" Bold="yes" Red="255" Green="255" Blue="255" />
    </UI>

    <WixVariable Id="WixUILicenseRtf" Value="Resources\assets\LICENSE.rtf" />
    <WixVariable Id="WixUIDialogBmp" Value="Resources\assets\dialog_background.bmp" />
    <WixVariable Id="WixUIBannerBmp" Value="Resources\assets\banner_background.bmp" />

    <WixVariable Id="WixUIExclamationIco" Value="Resources\assets\project_32x32.ico" />
    <WixVariable Id="WixUIInfoIco" Value="Resources\assets\project_32x32.ico" />
    <WixVariable Id="WixUINewIco" Value="Resources\assets\project_16x16.ico" />
    <WixVariable Id="WixUIUpIco" Value="Resources\assets\project_16x16.ico" />
  </Product>
</Wix>
