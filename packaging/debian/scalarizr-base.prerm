#!/bin/bash

set -x

echo 'scalarizr-base.prerm'
echo $@

NAME="scalarizr"
INIT_SCRIPT="/etc/init.d/$NAME"

if [ -x $INIT_SCRIPT ]; then
	$INIT_SCRIPT status > /dev/null 2>&1
	rc=$?
	echo -n $rc > "/tmp/$NAME.status"
	if [ $rc = '0' ]; then
		$INIT_SCRIPT stop
	fi

	grep -q /etc/scalr/private.d /proc/mounts && umount /etc/scalr/private.d || :
fi

exit 0

